<!doctype html>
<html>
  <head>
    <% content 'head-end' %>
  </head>
  <body>
    <nav class="header">
      <% if @authenticated :%>
        <a href="<%= @_.url('auth.logout') %>">Logout</a>
      <% else :%>
        <a href="<%= @_.url('auth.login') %>">Login</a>
      <% end %>
    </nav>
    <section>
      <% content %>
      <% content 'body-end' %>
    </section>
  </body>
</html>
