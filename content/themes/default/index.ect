<!doctype html>
<html lang="en">
<head>
	<title>Image Feed</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" href="<%= @asset('/libs/bootstrap/dist/css/bootstrap.min.css') %>">
	<link rel="stylesheet" href="<%= @asset('/css/style.css') %>">
	<% if @settings['ci_header']: %>
		<%- @settings['ci_header'] %>
	<% end %>
</head>
<body>
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#"><%= @settings['page_title'] || 'Image Feed' %></a>
			</div>
			<ul class="nav navbar-nav navbar-right">
				<li><a href="#">Login</a></li>
			</ul>
		</div>
	</nav>
	<div class="container">
		<div class="center-block text-center">
			<div class="btn-group">
				<a class="btn btn-default" href="<%= @prev %>" role="button">Prev</a>
				<a class="btn btn-default" href="/" role="button">Random</a>
				<a class="btn btn-default" href="<%= @next %>" role="button">Next</a>
			</div>
		</div>
		<div class="image-container">
			<img src="<%= @media.storage == 'local' && @upload(@media) || @media.path %>" class="img-responsive center-block" alt="Image Feed">
		</div>
		<div class="center-block text-center">
			<div class="btn-group">
				<a class="btn btn-default" href="<%= @prev %>" role="button">Prev</a>
				<a class="btn btn-default" href="/" role="button">Random</a>
				<a class="btn btn-default" href="<%= @next %>" role="button">Next</a>
			</div>
		</div>
	</div>
	<script src="<%= @asset('/js/app.js') %>"></script>
	<% if @settings['ci_footer']: %>
		<%- @settings['ci_footer'] %>
	<% end %>
</body>
</html>
